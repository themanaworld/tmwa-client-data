<?xml version="1.0"?>
<sprite>
  <imageset name="base" src="graphics/sprites/monsters/MoonMech.png" 
	width="64" height="64"/>
  <action name="stand" imageset="base">	
    <animation direction="up">
      <frame index="0" delay="275"/>
      <frame index="2" delay="275"/>
    </animation>
    <animation direction="left">
      <frame index="8" delay="275"/>
      <frame index="10" delay="275"/>
    </animation>
    <animation direction="down">
      <frame index="16" delay="275"/>
      <frame index="18" delay="275"/>
    </animation>
    <animation direction="right">
      <frame index="24" delay="275"/>
      <frame index="26" delay="275"/>
    </animation>
  </action>
  <action name="walk" imageset="base">
    <animation direction="up">
      <sequence start="0" end="7" delay="75"/>
    </animation>
    <animation direction="left">
      <sequence start="8" end="15" delay="75"/>
    </animation>
    <animation direction="down">
      <sequence start="16" end="23" delay="75"/>
    </animation>
    <animation direction="right">
      <sequence start="24" end="31" delay="75"/>
    </animation>
  </action>
  <action name="dead" imageset="base">
    <animation direction="up">
      <frame index="7"/>
    </animation>
    <animation direction="left">
      <frame index="15"/>
    </animation>
    <animation direction="down">
      <frame index="23"/>
    </animation>
    <animation direction="right">
      <frame index="31"/>
    </animation>
  </action>
  <action name="attack" imageset="base">
    <animation direction="up">
      <sequence start="6" end="7" delay="75"/>
      <end/>
    </animation>
    <animation direction="left">
      <sequence start="14" end="15" delay="75"/>
      <end/>
    </animation>
    <animation direction="down">
      <sequence start="22" end="23" delay="75"/>
      <end/>
    </animation>
    <animation direction="right">
      <sequence start="30" end="31" delay="75"/>
      <end/>
    </animation>
  </action>
</sprite>
