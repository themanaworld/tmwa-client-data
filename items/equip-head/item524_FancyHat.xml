    <sprite gender="female">equipment/head/fancyhat-female.xml</sprite>
    <replace sprite="hair">
      <item from="-5"/>
    </replace>
    <replace direction="upall" sprite="hair">
      <item from="-5" to="-5"/>
    </replace>
    <replace direction="left" sprite="hair">
      <item from="-13" to="-2"/>
      <item from="-15" to="-14"/>
    </replace>
    <replace direction="right" sprite="hair">
      <item from="-13" to="-2"/>
      <item from="-15" to="-14"/>
    </replace>
  </item>
</items>
